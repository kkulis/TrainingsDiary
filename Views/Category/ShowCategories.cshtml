@model TrainingDiary.Models.ViewModels.AllCategoriesViewModel
@{
    ViewData["Title"] = "All Categories";
}


<div class="container">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }
 

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Remove</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Categories.Count(); i++)
                {
                    <tr>
                        <td>@Model.Categories[i].Name</td>
                        <td><a class="btn btn-dark" asp-controller="Category" asp-action="EditCategory" asp-route-categoryId="@Model.Categories[i].Id">Edit</a></td>
                        <td>
                            <form asp-controller="Category" asp-action="DeleteCategory" method="post">
                                <input name="categoryId" type="hidden" value="@Model.Categories[i].Id" />
                                <input class="btn btn-danger" type="submit" value="Remove" />
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

</div>