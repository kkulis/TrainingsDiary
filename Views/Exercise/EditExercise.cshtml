@model TrainingDiary.Models.ViewModels.AddExerciseViewModel
@{
    ViewData["Title"] = "Edit Exercise";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
            </tr>
        </thead>
        <tbody>


            <tr>
                <td>@Model.Name</td>
                <td>@Model.Category.Name</td>

            </tr>

        </tbody>
    </table>






<form method="post">
    @Html.HiddenFor(e => e.Id)
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" value="" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Categories"></label>
        <select asp-items="@Model.Categories" asp-for="Category.Id" class="form-control">
            <option value="Select"></option>
        </select>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Add</button>
    </div>
</form>
</div>