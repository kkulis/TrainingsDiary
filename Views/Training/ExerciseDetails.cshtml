@model TrainingDiary.Models.ViewModels.ExerciseViewModel
@{
    ViewData["Title"] = "Exercise Details";
}


<h2>@Model.Name</h2>
<h3>@Model.Category.Name</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Reps</th>
            <th scope="col">Weight</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var serie in Model.SeriesViewModels)
         
        {
            <tr>
                <td>@serie.Reps</td>
                <td>@serie.Weight</td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-lg" asp-controller="Training" asp-action="CreateTraining" asp-route-TrainingNumber ="@ViewBag.TrainingNumber">Back</a>
</div>